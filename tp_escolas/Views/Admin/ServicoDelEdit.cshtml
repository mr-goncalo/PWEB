@model IEnumerable<tp_escolas.Models.Servico>

@{
    ViewBag.Title = "ServicoDelEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ServicoAddEdit</h2>

<p>
    @Html.ActionLink("Novo", "AddServ")
</p>
<p>
    @Html.ActionLink("Voltar", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsSelected)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditServ", new { id=item.ServicosID }) | 
            @Html.ActionLink("Apagar", "DelServ", new { id=item.ServicosID },
           new { onclick = "return confirm('Deseja mesmo Apagar?');" })
        </td>
    </tr>
}

</table>
