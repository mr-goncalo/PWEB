@model IEnumerable<tp_escolas.Models.ApplicationUser>

@{
    ViewBag.Title = "AdminAddDel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar ou Apagar Admin</h2> 
<p>
    @Html.ActionLink("Novo", "AdminAdd")
</p>
<p>
    @Html.ActionLink("Voltar", "Index")
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td> 
                <td>
                    @Html.ActionLink("Apagar", "AdminDel", new { id = item.Id },
           new { onclick = "return confirm('Deseja mesmo Apagar?');" })
                </td>
            </tr>
        }

    </table>
