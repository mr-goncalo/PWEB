@model  tp_escolas.Models.ViewModels.TipoEnsinoServicoViewModelAE

@{
    ViewBag.Title = "ServEnsino";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar / Editar Serviços Tipo Ensino</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-group">
    @Html.LabelFor(model => model.Descricao,Model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" }) 
    @Html.HiddenFor(model => model.TipoEnsinoID) 

    <div class="col-md-10">
        <div style="max-height:200px;width:300px;overflow:scroll">
            <table>
                @for (int i = 0; i < Model.Servicos.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(model => model.Servicos[i].ServicosID)
                            @Html.CheckBoxFor(model => model.Servicos[i].IsSelected)
                        </td>
                        <td>
                            @Html.HiddenFor(model => model.Servicos[i].Descricao)
                            @Html.LabelFor(model => model.Servicos[i].Descricao, Model.Servicos[i].Descricao)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div> 
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adicionar/Alterar" class="btn btn-default" />
        </div>
    </div>
</div>
}