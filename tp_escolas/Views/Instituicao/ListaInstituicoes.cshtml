@model IEnumerable<tp_escolas.Models.Instituicao>
@{
    ViewBag.Title = "ListaInstituicoes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListaInstituicoes</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Morada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoInstituicao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
     if (item.Activa)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoInstituicao)
            </td>
            <td>
                @Html.ActionLink("Mais Informacoes", "info", new { id = item.InstituicaoID })
            </td>
        </tr>
         }
     }

</table>
