@model IEnumerable<tp_escolas.Models.Instituicao>
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Morada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotaAvg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Morada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodPostal)
        </td>
        <td>
            @if (!Double.IsNaN(item.NotaAvg))
            {
                @Html.DisplayFor(modelItem => item.NotaAvg)
            }
            else
            {
                @Html.Label("Ainda não há avaliação")
            }
        </td>
        <td>
            @Html.ActionLink("Mais Info", "Info","Instituicao", new {id=item.InstituicaoID },null) 
        </td>
    </tr>
}

</table>
